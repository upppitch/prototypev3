<%= form_for @job do |f| %>
  <% if @job.errors.any? %>
    <h2><%= pluralize(@job.errors.count, "error") %> prevent this post from saving: </h2>
    <ul>
      <% @job.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  <% end %>

  <%= f.label :title %><br>
  <%= f.text_field :title %>

  <br>
  <br>

  <%= f.label :description, "Write your job description here" %><br>
  <%= f.text_area :description%>

  <br>
  <br>

  <%= f.label :city %><br>
  <%= f.text_field :city%>

  <br>
  <br>

  <%= f.submit %>


<% end %>