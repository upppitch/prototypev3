<ul id="jobline">
  
    <li class="listing clearfix">
      <div class="image_wrapper">
        <%= image_tag @job.user.avatar.url(:thumb) %>
      </div>
      
      <div class="info">
        <span class="job_title"><%= @job.title %></span>
        <span class="job_info"><%= @job.user.company %><span>&bull;</span> <%= @job.city %> <span>&bull;</span><%= @job.created_at.strftime("%A, %b, %d") %></span>
      </div>
      
      <span class="job_type full_time">Full-Time</span>
      <br>
      
    </li>

    <p><%= @job.description %> </p>
</ul>

<%= link_to "Edit", edit_job_path %> | <%= link_to "Delete", job_path(@job), method: :delete, data:{confirm: "Are you sure?"} %>