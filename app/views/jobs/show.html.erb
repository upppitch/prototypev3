
<div class="sub_nav">
  <% if (user_signed_in?) && (current_user == @job.user ) %> 

    <i class="fa fa-pencil" aria-hidden="true"><%= link_to "Edit", edit_job_path %></i> | <i class="fa fa-trash-o" aria-hidden="true">
<%= link_to "Delete", job_path(@job), method: :delete, data:{confirm: "Are you sure?"} %></i>
  <% end %>
</div>

<div class="job_post">
  <h6 id="date"><%= @job.created_at.strftime("%A, %b, %d") %></h6>
  <h1 id="title"><%= @job.title %></h1>
  <hr>
  <h5 id="job_info">&bull;<%= @job.user.company %> &bull;<%= @job.city %> &bull;

    <% if @job.category_id == "1" %>
      <span class="job_type full_time">Full-Time</span> 
    <% elsif @job.category_id == "2" %>
      <span class="job_type part_time">Part-Time</span>
    <% elsif @job.category_id == "3" %>
      <span class="job_type freelance">Freelance</span>
    <% else %>
      <span class="job_type contract">Contract</span>
    <% end %>

  </h5>

  <p id="job_contents"><%= @job.description %> </p>
</div>
<hr>
<div id="share_box">
  <a onclick="javascript:window.open('http://twitter.com/share?text=<%= @job.title%> by @WebDeveloper.io - &amp;url<%= url_for([@job,{only_path: false}]) %>', '_blank', 'width=800,height=500,top=200,left=300');void(0);">
      <i class="fa fa-twitter"></i>
    </a>
    
    <a onclick="javascript:window.open('http://facebook.com/sharer.php?u=<%= url_for([@job,{only_path: false}]) %>', '_blank', 'width=800,height=500,top=200,left=300');void(0);">
      <i class="fa fa-facebook"></i>
    </a>

    <a onclick="javascript:window.open('https://plus.google.com/share?url=<%= url_for([@job,{only_path: false}]) %>', '_blank', 'width=800,height=500,top=200,left=300');void(0);">
      <i class="fa fa-google-plus"></i>
    </a>
</div>
<hr>

